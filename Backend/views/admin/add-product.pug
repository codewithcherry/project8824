doctype html
include ../includes/navigation.pug
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= pageTitle
    link(rel="stylesheet" href="/navigation.css")
    link(rel="stylesheet" href="/main.css")
    link(rel="stylesheet" href="/addproduct.css")
  body
    block navbar
    if errorMessage
            .error-message 
                p= errorMessage
    .main-container
      .form-title-container
        h1.form-title Add Product Details
      .form-wrapper
        .form-container
          form.product-form(action="/view-products" method="post" enctype="multipart/form-data")
            .form-item
              label(for="title") Product Title
              input#title(type="text" name="title" placeholder="Enter product title" value=oldData.title required)
            .form-item
              label(for="description") Description
              textarea#description(name="description" placeholder="Type short description.."   rows="3" required)= oldData.description
            .form-item
              label(for="price") Price ($)
              input#price(type="number" step="0.01" name="price" placeholder="Enter price" value=oldData.price  required)
            .form-item
              label(for="image") Image
              input#image(type="file"  name="image" required)
            .form-actions
              input(type="hidden" name="_csrf" value=csrfToken)
              button.submit-button(type="submit") Add Product

